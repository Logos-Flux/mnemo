{
  "name": "@mnemo/local",
  "version": "0.1.0",
  "description": "Local Bun server for Mnemo - Extended memory for AI assistants via Gemini context caching",
  "author": "Voltage Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/logos-flux/mnemo",
    "directory": "packages/local"
  },
  "homepage": "https://github.com/logos-flux/mnemo#readme",
  "bugs": {
    "url": "https://github.com/logos-flux/mnemo/issues"
  },
  "keywords": [
    "mcp",
    "gemini",
    "context",
    "memory",
    "ai",
    "claude",
    "llm",
    "cli",
    "server",
    "context-caching"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mnemo": "./dist/cli.js",
    "mnemo-stdio": "./dist/stdio.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "cli": "bun run src/cli.ts",
    "build": "bun x tsc --build",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "test": "bun test",
    "typecheck": "bun x tsc --noEmit",
    "prepublishOnly": "bun run clean && bun run build"
  },
  "dependencies": {
    "@mnemo/core": "workspace:*",
    "@mnemo/mcp-server": "workspace:*",
    "hono": "^4.6.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
